<Page x:Class="TMS.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Login"
      FontFamily="Segoe UI"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.Background>
                <ImageBrush ImageSource="/images/tickit.png" Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>


        <Grid Grid.Column="1" Background="White">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

                <TextBlock Text="Welcome Back!" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Please login to your account" 
                           FontSize="14" 
                           Foreground="#9E9E9E" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,40"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#1E3A8A" Margin="15,0,0,5"/>

                <Border CornerRadius="25" 
                        Background="#BBDEFB" 
                        Height="50"
                        Margin="0,0,0,20">
                    <TextBox x:Name="txtEmail" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="20,15,20,0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Foreground="#1E3A8A"/>
                </Border>

                <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#1E3A8A" Margin="15,0,0,5"/>

                <Border CornerRadius="25" 
                        Background="#BBDEFB" 
                        Height="50"
                        Margin="0,0,0,10">
                    <Grid>
                        <Border x:Name="PasswordBorder" Background="Transparent" BorderThickness="0">
                            <PasswordBox x:Name="pwdBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="20,15,45,0" 
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Foreground="#1E3A8A"
                                         PasswordChanged="pwdBox_PasswordChanged"/>
                        </Border>

                        <Border x:Name="PasswordTextBorder" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Visibility="Collapsed">
                            <TextBox x:Name="txtPasswordVisible"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="20,15,45,0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Foreground="#1E3A8A"
                                     TextChanged="txtPasswordVisible_TextChanged"/>
                        </Border>

                        <Button x:Name="btnTogglePassword"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,15,0"
                                Click="TogglePasswordVisibility_Click">
                            <materialDesign:PackIcon x:Name="EyePack" Kind="Eye" Foreground="#1E3A8A" Opacity="0.5"/>
                        </Button>
                    </Grid>
                </Border>

                <Button Content="Forgot Password"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#757575"
                        FontWeight="SemiBold"
                        FontSize="12"
                        HorizontalAlignment="Right"
                        Margin="0,0,5,30"
                        Click="ForgotPassword_Click"/>

                <Button Content="Login" 
                        Height="50" 
                        Margin="0,0,0,30"
                        Foreground="White" 
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0" 
                        Click="LoginButton_Click">

                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00C6FF" Offset="0.0"/>
                            <GradientStop Color="#0072FF" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account? " Foreground="#757575"/>
                    <Button Content="Register" 
                            Background="Transparent" 
                            Foreground="#0072FF" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Margin="5,0,0,0"
                            Click="NavigateToRegister_Click"/>
                </StackPanel>

            </StackPanel>
        </Grid>

    </Grid>
</Page>