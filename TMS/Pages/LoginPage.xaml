<Page x:Class="TMS.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Login"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Left side -->
            <ColumnDefinition Width="2*" />
            <!-- Right side -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <!-- Left Panel -->
        <Grid Grid.Column="0" Background="#FF17358A">
            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Ticketing Management System" 
                   Foreground="White" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center"/>
                <TextBlock Text="Simplify ticket management efficiently." 
                   Foreground="White" 
                   FontSize="16" 
                   Margin="0,10,0,0" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center"/>
            </StackPanel>
        </Grid>


        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <!-- Welcome -->
                <TextBlock Text="Welcome Back!" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please login to continue" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtEmail" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>

                <Grid>
                    <!-- Hidden password input -->
                    <Border x:Name="PasswordBorder"
                        CornerRadius="5"
                        Background="#F0F4FF"
                        BorderBrush="#1E3A8A"
                        BorderThickness="1">
                        <PasswordBox x:Name="pwdBox"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        PasswordChanged="pwdBox_PasswordChanged"/>
                    </Border>

                    <!-- Visible password text -->
                    <Border x:Name="PasswordTextBorder"
                        CornerRadius="5"
                        Background="#F0F4FF"
                        BorderBrush="#1E3A8A"
                        BorderThickness="1"
                        Visibility="Collapsed">
                        <TextBox x:Name="txtPasswordVisible"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="10"
                 TextChanged="txtPasswordVisible_TextChanged"/>
                    </Border>

                    <!-- Show / Hide Button -->
                    <Button x:Name="btnTogglePassword"
        Width="32" Height="32"
        Background="Transparent"
        BorderThickness="0"
        HorizontalAlignment="Right"
        Click="TogglePasswordVisibility_Click">

                        <materialDesign:PackIcon x:Name="EyePack"
                             Kind="Eye"
                             Width="22"
                             Height="22"
                             Foreground="#1E3A8A"/>
                    </Button>

                </Grid>


                <!-- Login Button -->
                <Button Content="Login" Height="40" Margin="0,20,0,10"
                        Background="#1E3A8A" Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Click="LoginButton_Click"/>

                <!-- Below the Login Button, add Forgot Password link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Forgot your password? " Foreground="Gray"/>
                    <Button Content="Forgot Password"
                            Background="Transparent"
                            Foreground="#1E3A8A"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="ForgotPassword_Click"/>
                </StackPanel>

                <!-- Navigate to Register -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account? " Foreground="Gray"/>
                    <Button Content="Register" 
                            Background="Transparent" 
                            Foreground="#1E3A8A" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Click="NavigateToRegister_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>