<Page x:Class="TMS.Pages.OtpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OTP Verification"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Left side -->
            <ColumnDefinition Width="2*" />
            <!-- Right side -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Background="#FF17358A">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Verify Your Email" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
                <TextBlock Text="Enter the OTP sent to your email to complete registration." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,0" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <!-- Title -->
                <TextBlock Text="OTP Verification" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Enter the 6-digit code sent to your email" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,20"/>

                <!-- Email (read-only) -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtEmail" Background="Transparent" BorderThickness="0" Padding="10" IsReadOnly="True"/>
                </Border>

                <!-- OTP Code -->
                <TextBlock Text="OTP Code" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtOtp" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Verify Button -->
                <Button Content="Verify OTP" Height="40" Margin="0,20,0,10"
                        Background="#1E3A8A" Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Click="VerifyButton_Click"/>

                <!-- Resend OTP -->
                <Button Content="Resend OTP" Height="30" Margin="0,10,0,0"
                        Background="Transparent" Foreground="#1E3A8A"
                        BorderThickness="0"
                        Click="ResendButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
