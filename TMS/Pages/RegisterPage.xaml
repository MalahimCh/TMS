<Page x:Class="TMS.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Register"
      FontFamily="Segoe UI"
      Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="/images/tickit.png" Stretch="UniformToFill" Opacity="0.9"/>
            </Grid.Background>
            <Border Background="#10000000"/>
        </Grid>

        <Border Grid.Row="0" Grid.RowSpan="2"
                Width="420"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White" 
                CornerRadius="15"
                Margin="0,60,0,0">

            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>

            <StackPanel Margin="30">

                <TextBlock Text="Create an Account" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5"/>

                <TextBlock Text="Please fill the form below" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <TextBlock Text="Full Name" FontWeight="Bold" Foreground="#1E3A8A" Margin="2,0,0,5"/>

                <Border CornerRadius="8" 
                        Background="#F0F4FF" 
                        BorderBrush="#1E3A8A" 
                        BorderThickness="1" 
                        Height="45" 
                        Margin="0,0,0,15">
                    <TextBox x:Name="txtFullName"
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="15,0,15,0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Foreground="Black"/>
                </Border>

                <TextBlock Text="Email" FontWeight="Bold" Foreground="#1E3A8A" Margin="2,0,0,5"/>

                <Border CornerRadius="8" 
                        Background="#F0F4FF" 
                        BorderBrush="#1E3A8A" 
                        BorderThickness="1" 
                        Height="45" 
                        Margin="0,0,0,15">
                    <TextBox x:Name="txtEmail"
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="15,0,15,0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Foreground="Black"/>
                </Border>

                <TextBlock Text="Phone" FontWeight="Bold" Foreground="#1E3A8A" Margin="2,0,0,5"/>

                <Border CornerRadius="8" 
                        Background="#F0F4FF" 
                        BorderBrush="#1E3A8A" 
                        BorderThickness="1" 
                        Height="45" 
                        Margin="0,0,0,15">
                    <TextBox x:Name="txtPhone" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="15,0,15,0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Foreground="Black"/>
                </Border>

                <TextBlock Text="Password" FontWeight="Bold" Foreground="#1E3A8A" Margin="2,0,0,5"/>

                <Border CornerRadius="8" 
                        Background="#F0F4FF" 
                        BorderBrush="#1E3A8A" 
                        BorderThickness="1" 
                        Height="45" 
                        Margin="0,0,0,25">
                    <Grid>
                        <Border x:Name="PasswordBorder" Background="Transparent" BorderThickness="0">
                            <PasswordBox x:Name="pwdBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="15,0,45,0" 
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Foreground="Black"
                                         PasswordChanged="pwdBox_PasswordChanged"/>
                        </Border>

                        <Border x:Name="PasswordTextBorder" Background="Transparent" BorderThickness="0" Visibility="Collapsed">
                            <TextBox x:Name="txtPasswordVisible"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,0,45,0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Foreground="Black"
                                     TextChanged="txtPasswordVisible_TextChanged"/>
                        </Border>

                        <Button x:Name="btnTogglePassword"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Click="TogglePasswordVisibility_Click">
                            <materialDesign:PackIcon x:Name="EyePack" Kind="Eye" Foreground="#1E3A8A" Opacity="0.8"/>
                        </Button>
                    </Grid>
                </Border>

                <Button Content="Register" 
                        Height="45" 
                        Margin="0,0,0,20"
                        Background="#1E3A8A" 
                        Foreground="White" 
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0" 
                        Click="RegisterButton_Click">

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Already have an account? " Foreground="#757575"/>
                    <Button Content="Login" 
                            Background="Transparent" 
                            Foreground="#1E3A8A" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Margin="5,0,0,0"
                            Padding="0"
                            Click="NavigateToLogin_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>