<Page x:Class="TMS.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Left side -->
            <ColumnDefinition Width="2*" />
            <!-- Right side -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Background="#FF17358A">
            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Ticketing Management System" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
                <TextBlock Text="Simplify ticket management efficiently." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,0" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <!-- Title -->
                <TextBlock Text="Create an Account" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please fill the form below" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,20"/>

                <!-- Full Name -->
                <TextBlock Text="Full Name" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtFullName" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtEmail" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Phone -->
                <TextBlock Text="Phone" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtPhone" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <PasswordBox x:Name="pwdBox" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- Register Button -->
                <Button Content="Register" Height="40" Margin="0,20,0,10"
                        Background="#1E3A8A" Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Click="RegisterButton_Click"/>

                <!-- Navigate to Login -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Already have an account? " Foreground="Gray"/>
                    <Button Content="Login" 
                            Background="Transparent" 
                            Foreground="#1E3A8A" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Click="NavigateToLogin_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
