<Page x:Class="TMS.Pages.Admin.ManageRoutesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F7FF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="#17358A" Grid.Column="0">
            <StackPanel Margin="20">

                <!-- BACK BUTTON -->
                <Button Content="← Back"
                        Click="Back_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="0,0,0,30"/>

                <TextBlock Text="Manage Routes"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,20" />

                <!-- SIDEBAR BUTTONS -->
                <Button Content="Add Route"
                        Height="40"
                        Tag="Add"
                        Click="Sidebar_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="0,8"/>

                <Button Content="Update Route"
                        Height="40"
                        Tag="Update"
                        Click="Sidebar_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="0,8"/>

                <Button Content="Delete Route"
                        Height="40"
                        Tag="Delete"
                        Click="Sidebar_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="0,8"/>

                <Button Content="View All Routes"
                        Height="40"
                        Tag="View"
                        Click="Sidebar_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="0,8"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="20">
            <ContentControl x:Name="ContentArea"/>
        </Grid>
    </Grid>
</Page>
