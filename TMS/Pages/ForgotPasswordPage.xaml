<Page x:Class="TMS.Pages.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Forgot Password"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Background="#FF17358A">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Reset Your Password" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
                <TextBlock Text="Follow the steps to reset your password safely." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,0" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <TextBlock Text="Forgot Password" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Enter your email to receive a verification code" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1">
                    <TextBox x:Name="txtEmail" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- OTP -->
                <TextBlock Text="OTP Code" FontWeight="SemiBold" Margin="0,10,0,5" x:Name="lblOtp" Visibility="Collapsed"/>
                <Border CornerRadius="5" Background="#F0F4FF" BorderBrush="#1E3A8A" BorderThickness="1" x:Name="brdOtp" Visibility="Collapsed">
                    <TextBox x:Name="txtOtp" Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <!-- New Password -->
                <TextBlock Text="New Password" FontWeight="SemiBold" Margin="0,10,0,5" x:Name="lblNewPassword" Visibility="Collapsed"/>

                <Grid x:Name="grdNewPassword" Visibility="Collapsed">
                    <!-- Hidden Password -->
                    <Border x:Name="PasswordBorderNew"
            CornerRadius="5"
            Background="#F0F4FF"
            BorderBrush="#1E3A8A"
            BorderThickness="1">
                        <PasswordBox x:Name="pwdNew"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     PasswordChanged="pwdNew_PasswordChanged"/>
                    </Border>

                    <!-- Visible Password -->
                    <Border x:Name="PasswordTextBorderNew"
            CornerRadius="5"
            Background="#F0F4FF"
            BorderBrush="#1E3A8A"
            BorderThickness="1"
            Visibility="Collapsed">
                        <TextBox x:Name="txtPasswordVisibleNew"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="10"
                 TextChanged="txtPasswordVisibleNew_TextChanged"/>
                    </Border>

                    <!-- Eye Button -->
                    <Button x:Name="btnTogglePasswordNew"
            Width="32" Height="32"
            Background="Transparent"
            BorderThickness="0"
            HorizontalAlignment="Right"
            Click="TogglePasswordVisibilityNew_Click">
                        <materialDesign:PackIcon x:Name="EyePackNew"
                                 Kind="Eye"
                                 Width="22"
                                 Height="22"
                                 Foreground="#1E3A8A"/>
                    </Button>
                </Grid>


                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" FontWeight="SemiBold" Margin="0,10,0,5" x:Name="lblConfirmPassword" Visibility="Collapsed"/>

                <Grid x:Name="grdConfirmPassword" Visibility="Collapsed">
                    <!-- Hidden Password -->
                    <Border x:Name="PasswordBorderConfirm"
            CornerRadius="5"
            Background="#F0F4FF"
            BorderBrush="#1E3A8A"
            BorderThickness="1">
                        <PasswordBox x:Name="pwdConfirm"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     PasswordChanged="pwdConfirm_PasswordChanged"/>
                    </Border>

                    <!-- Visible Password -->
                    <Border x:Name="PasswordTextBorderConfirm"
            CornerRadius="5"
            Background="#F0F4FF"
            BorderBrush="#1E3A8A"
            BorderThickness="1"
            Visibility="Collapsed">
                        <TextBox x:Name="txtPasswordVisibleConfirm"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="10"
                 TextChanged="txtPasswordVisibleConfirm_TextChanged"/>
                    </Border>

                    <!-- Eye Button -->
                    <Button x:Name="btnTogglePasswordConfirm"
            Width="32" Height="32"
            Background="Transparent"
            BorderThickness="0"
            HorizontalAlignment="Right"
            Click="TogglePasswordVisibilityConfirm_Click">
                        <materialDesign:PackIcon x:Name="EyePackConfirm"
                                 Kind="Eye"
                                 Width="22"
                                 Height="22"
                                 Foreground="#1E3A8A"/>
                    </Button>
                </Grid>


                <!-- Action Button -->
                <Button Content="Send OTP" Height="40" Margin="0,20,0,10"
                Background="#1E3A8A" Foreground="White" 
                FontWeight="Bold"
                BorderThickness="0" 
                Click="ActionButton_Click"
                x:Name="btnAction"/>

                <!-- Resend OTP Button -->
                <Button Content="Resend OTP" Height="30" Margin="0,0,0,0"
                Background="Transparent" Foreground="#1E3A8A"
                BorderThickness="0"
                Click="ResendButton_Click"
                x:Name="btnResend"
                Visibility="Collapsed"/>


            </StackPanel>
        </Grid>
    </Grid>
</Page>
