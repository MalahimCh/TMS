<UserControl x:Class="TMS.Controls.UpdateInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Segoe UI"
             Background="#F0F2F5">

    <Grid>

        <Border Background="White"
                Width="450"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- === HEADER BAR === -->
                <Border Grid.Row="0"
                        Background="#1E3A8A"
                        CornerRadius="12,12,0,0"
                        Padding="20">
                    <TextBlock Text="Update Information"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- === CONTENT BODY === -->
                <StackPanel Grid.Row="1" Margin="30,25,30,30">

                    <!-- FULL NAME -->
                    <TextBlock Text="Full Name"
                               FontWeight="SemiBold"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC"
                            CornerRadius="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtName"
                                 Padding="10"
                                 FontSize="14"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>

                    <!-- PHONE -->
                    <TextBlock Text="Phone Number"
                               FontWeight="SemiBold"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC"
                            CornerRadius="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,25">
                        <TextBox x:Name="txtPhone"
                                 Padding="10"
                                 FontSize="14"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>

                    <!-- SAVE BUTTON -->
                    <Button Content="Save Changes"
                            Click="Save_Click"
                            Height="45"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0">

                        <Button.Style>
                            <Style TargetType="Button">

                                <Setter Property="Background" Value="#1E3A8A"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>

                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="#2544A5"/>
                                                </Trigger>

                                                <!-- Pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="#162C69"/>
                                                </Trigger>

                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Style>
                        </Button.Style>

                    </Button>

                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</UserControl>