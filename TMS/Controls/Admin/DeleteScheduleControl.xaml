<UserControl x:Class="TMS.Controls.Admin.DeleteScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" Width="350" VerticalAlignment="Top">
        <TextBlock Text="Delete Schedule" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

        <TextBlock Text="Select Schedule"/>
        <ComboBox x:Name="cmbScheduleDelete" Width="300" Margin="0,0,0,20"/>

        <Button Content="Delete Schedule"
                Width="140"
                Height="35"
                Background="#DC2626"
                Foreground="White"
                FontWeight="Bold"
                Click="DeleteScheduleDelete_Click"/>
    </StackPanel>
</UserControl>
