<UserControl x:Class="TMS.Controls.Admin.ViewRouteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" VerticalAlignment="Top">

        <TextBlock Text="All Routes" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <DataGrid x:Name="dgRoutes" AutoGenerateColumns="False" CanUserAddRows="False" Height="400" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Route ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*"/>
                <DataGridTextColumn Header="Distance (Km)" Binding="{Binding DistanceKm}" Width="*"/>
                <DataGridTextColumn Header="Estimated Time (min)" Binding="{Binding EstimatedTimeMinutes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
