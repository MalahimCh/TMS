<UserControl x:Class="TMS.Controls.Admin.AddScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <StackPanel Margin="20" Width="350" VerticalAlignment="Top">
            <TextBlock Text="Add Schedule" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

            <TextBlock Text="Select Bus"/>
            <ComboBox x:Name="cmbBusAdd" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Select Route"/>
            <ComboBox x:Name="cmbRouteAdd" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Departure Date"/>
            <DatePicker x:Name="dpDepartureDateAdd" Width="200" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDepartureTimeAdd" Width="100" Margin="0,0,0,10" ToolTip="HH:mm"/>

            <TextBlock Text="Arrival Date"/>
            <DatePicker x:Name="dpArrivalDateAdd" Width="200" Margin="0,0,0,5"/>
            <TextBox x:Name="txtArrivalTimeAdd" Width="100" Margin="0,0,0,10" ToolTip="HH:mm"/>

            <TextBlock Text="Price"/>
            <TextBox x:Name="txtPriceAdd" Width="200" Margin="0,0,0,20"/>

            <TextBlock Text="Recurring?"/>
            <CheckBox x:Name="chkRecurringAdd" Content="Yes" Margin="0,0,0,20" Checked="ChkRecurringAdd_Checked" Unchecked="ChkRecurringAdd_Unchecked"/>

            <StackPanel Orientation="Vertical" x:Name="RecurringPanelAdd" Visibility="Collapsed">
                <TextBlock Text="Start Date"/>
                <DatePicker x:Name="dpStartDateAdd" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="End Date"/>
                <DatePicker x:Name="dpEndDateAdd" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="Frequency"/>
                <ComboBox x:Name="cmbFrequencyAdd" Width="200" Margin="0,0,0,20">
                    <ComboBoxItem Content="Daily"/>
                    <ComboBoxItem Content="Weekly"/>
                    <ComboBoxItem Content="Mon-Fri"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Add Schedule"
                    Width="140"
                    Height="35"
                    Background="#1E3A8A"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddScheduleAdd_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
