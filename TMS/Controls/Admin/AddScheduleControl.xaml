<UserControl x:Class="TMS.Controls.Admin.AddScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <StackPanel Margin="20" Width="400" VerticalAlignment="Top">

            <TextBlock Text="Add Schedule" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

            <!-- Schedule Type -->
            <TextBlock Text="Schedule Type:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                <RadioButton x:Name="rbOneTime" Content="One-Time" IsChecked="True" Checked="ScheduleType_Checked" Margin="0,0,20,0"/>
                <RadioButton x:Name="rbRecurring" Content="Recurring" Checked="ScheduleType_Checked"/>
            </StackPanel>

            <!-- Common Fields -->
            <TextBlock Text="Select Bus"/>
            <ComboBox x:Name="cmbBusAdd" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Select Route"/>
            <ComboBox x:Name="cmbRouteAdd" Width="300" Margin="0,0,0,10"
                      SelectionChanged="cmbRouteAdd_SelectionChanged"/>

            <TextBlock Text="Price"/>
            <TextBox x:Name="txtPriceAdd" Width="200" Margin="0,0,0,20" ToolTip="Enter price" />

            <!-- One-Time Fields -->
            <StackPanel x:Name="OneTimePanel">
                <TextBlock Text="Departure Date"/>
                <DatePicker x:Name="dpDepartureDateAdd" Width="200" Margin="0,0,0,5" SelectedDateChanged="DepartureDateChanged"/>
                <TextBlock Text="Departure Time"/>
                <xctk:TimePicker x:Name="tpDepartureTimeAdd" Width="100" Margin="0,0,0,10"
                                 ValueChanged="DepartureTimeChanged"/>

                <TextBlock Text="Arrival Date"/>
                <DatePicker x:Name="dpArrivalDateAdd" Width="200" Margin="0,0,0,5" IsEnabled="False"/>
                <TextBlock Text="Arrival Time"/>
                <xctk:TimePicker x:Name="tpArrivalTimeAdd" Width="100" Margin="0,0,0,10" IsEnabled="False"/>
            </StackPanel>

            <!-- Recurring Fields -->
            <StackPanel x:Name="RecurringPanelAdd" Visibility="Collapsed">
                <TextBlock Text="Time of Day"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Departure:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <xctk:TimePicker x:Name="tpDepartureTimeRecurring" Width="80" ValueChanged="DepartureTimeChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Arrival:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <xctk:TimePicker x:Name="tpArrivalTimeRecurring" Width="80" IsEnabled="False"/>
                </StackPanel>

                <TextBlock Text="Start Date"/>
                <DatePicker x:Name="dpStartDateAdd" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="End Date"/>
                <DatePicker x:Name="dpEndDateAdd" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="Frequency"/>
                <ComboBox x:Name="cmbFrequencyAdd" Width="200" Margin="0,0,0,10" SelectionChanged="FrequencyChanged">
                    <ComboBoxItem Content="Daily"/>
                    <ComboBoxItem Content="Weekly"/>
                </ComboBox>

                <StackPanel x:Name="DaysSelectionPanel">
                    <TextBlock Text="Select Days (for Weekly)" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                        <CheckBox x:Name="chkMon" Content="Mon"/>
                        <CheckBox x:Name="chkTue" Content="Tue"/>
                        <CheckBox x:Name="chkWed" Content="Wed"/>
                        <CheckBox x:Name="chkThu" Content="Thu"/>
                        <CheckBox x:Name="chkFri" Content="Fri"/>
                        <CheckBox x:Name="chkSat" Content="Sat"/>
                        <CheckBox x:Name="chkSun" Content="Sun"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Button Content="Add Schedule"
                    Width="140"
                    Height="35"
                    Background="#1E3A8A"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddScheduleAdd_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
