<UserControl x:Class="TMS.Controls.Admin.UpdateScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <StackPanel Margin="20" Width="350" VerticalAlignment="Top">
            <TextBlock Text="Update Schedule" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

            <TextBlock Text="Select Schedule"/>
            <ComboBox x:Name="cmbScheduleUpdate" Width="300" Margin="0,0,0,10" SelectionChanged="CmbScheduleUpdate_SelectionChanged"/>

            <TextBlock Text="Select Bus"/>
            <ComboBox x:Name="cmbBusUpdate" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Select Route"/>
            <ComboBox x:Name="cmbRouteUpdate" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Departure Date"/>
            <DatePicker x:Name="dpDepartureDateUpdate" Width="200" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDepartureTimeUpdate" Width="100" Margin="0,0,0,10" ToolTip="HH:mm"/>

            <TextBlock Text="Arrival Date"/>
            <DatePicker x:Name="dpArrivalDateUpdate" Width="200" Margin="0,0,0,5"/>
            <TextBox x:Name="txtArrivalTimeUpdate" Width="100" Margin="0,0,0,10" ToolTip="HH:mm"/>

            <TextBlock Text="Price"/>
            <TextBox x:Name="txtPriceUpdate" Width="200" Margin="0,0,0,20"/>

            <TextBlock Text="Recurring?"/>
            <CheckBox x:Name="chkRecurringUpdate" Content="Yes" Margin="0,0,0,20" Checked="ChkRecurringUpdate_Checked" Unchecked="ChkRecurringUpdate_Unchecked"/>

            <StackPanel Orientation="Vertical" x:Name="RecurringPanelUpdate" Visibility="Collapsed">
                <TextBlock Text="Start Date"/>
                <DatePicker x:Name="dpStartDateUpdate" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="End Date"/>
                <DatePicker x:Name="dpEndDateUpdate" Width="200" Margin="0,0,0,5"/>
                <TextBlock Text="Frequency"/>
                <ComboBox x:Name="cmbFrequencyUpdate" Width="200" Margin="0,0,0,20">
                    <ComboBoxItem Content="Daily"/>
                    <ComboBoxItem Content="Weekly"/>
                    <ComboBoxItem Content="Mon-Fri"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Update Schedule"
                    Width="140"
                    Height="35"
                    Background="#1E3A8A"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="UpdateScheduleUpdate_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
