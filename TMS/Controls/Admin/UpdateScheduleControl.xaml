<UserControl x:Class="TMS.Controls.Admin.UpdateScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <StackPanel Margin="20" Width="400" VerticalAlignment="Top">

            <TextBlock Text="Update Schedule" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

            <!-- Schedule Selection -->
            <TextBlock Text="Select Schedule"/>
            <ComboBox x:Name="cmbScheduleUpdate" Width="300" Margin="0,0,0,10" SelectionChanged="CmbScheduleUpdate_SelectionChanged"/>

            <!-- Recurring update choice -->
            <StackPanel x:Name="RecurringUpdateModePanel" Visibility="Collapsed" Margin="0,10,0,10">
                <TextBlock Text="This schedule is part of a recurring schedule. Update options:" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <RadioButton x:Name="rbUpdateThisInstance" Content="Update this instance only" Margin="5,0" Checked="UpdateOption_Checked"/>
                    <RadioButton x:Name="rbUpdateAllFuture" Content="Update all future schedules" Margin="5,0" Checked="UpdateOption_Checked"/>
                </StackPanel>
            </StackPanel>

            <!-- Common schedule fields -->
            <StackPanel x:Name="SchedulePanelUpdate" Visibility="Collapsed">

                <TextBlock Text="Select Bus"/>
                <ComboBox x:Name="cmbBusUpdate" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Select Route"/>
                <ComboBox x:Name="cmbRouteUpdate" Width="300" Margin="0,0,0,10" SelectionChanged="CmbRouteUpdate_SelectionChanged"/>

                <TextBlock Text="Price"/>
                <TextBox x:Name="txtPriceUpdate" Width="200" Margin="0,0,0,20"/>

                <TextBlock Text="Departure Date"/>
                <DatePicker x:Name="dpDepartureDateUpdate" Width="200" Margin="0,0,0,5" SelectedDateChanged="DepartureDateUpdate_SelectedDateChanged"/>

                <TextBlock Text="Departure Time"/>
                <xctk:TimePicker x:Name="tpDepartureTimeUpdate" Width="100" Margin="0,0,0,10" ValueChanged="DepartureTimeUpdate_ValueChanged"/>

                <TextBlock Text="Arrival Date"/>
                <DatePicker x:Name="dpArrivalDateUpdate" Width="200" Margin="0,0,0,5" IsEnabled="False"/>

                <TextBlock Text="Arrival Time"/>
                <xctk:TimePicker x:Name="tpArrivalTimeUpdate" Width="100" Margin="0,0,0,10" IsEnabled="False"/>
            </StackPanel>

            <Button Content="Update Schedule"
                    Width="140"
                    Height="35"
                    Background="#1E3A8A"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="UpdateScheduleUpdate_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
