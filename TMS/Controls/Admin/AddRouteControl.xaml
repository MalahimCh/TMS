<UserControl x:Class="TMS.Controls.Admin.AddRouteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" VerticalAlignment="Top" Width="300">

        <TextBlock Text="Add New Route"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1E3A8A"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Origin"/>
        <TextBox x:Name="txtOrigin" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Destination"/>
        <TextBox x:Name="txtDestination" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Distance (Km)"/>
        <TextBox x:Name="txtDistance" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Estimated Time (minutes)"/>
        <TextBox x:Name="txtEstimatedTime" Width="200" Margin="0,0,0,20"/>

        <Button Content="Add Route"
                Width="120"
                Height="35"
                Background="#1E3A8A"
                Foreground="White"
                FontWeight="Bold"
                Click="AddRoute_Click"/>
    </StackPanel>
</UserControl>
