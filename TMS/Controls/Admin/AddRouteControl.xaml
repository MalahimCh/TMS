<UserControl x:Class="TMS.Controls.Admin.AddRouteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800"
             FontFamily="Segoe UI">

    <Grid Background="#F0F2F5">

        <Border Background="White" 
                Width="450" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#1E3A8A" 
                        CornerRadius="12,12,0,0" 
                        Padding="20">
                    <TextBlock Text="Add New Route" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Row="1" Margin="30,25,30,20">

                    <TextBlock Text="Origin" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtOrigin" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Destination" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtDestination" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Distance (Km)" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtDistance" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Estimated Time (minutes)" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtEstimatedTime" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                </StackPanel>

                <Button Content="Add Route"
                        Grid.Row="2"
                        Margin="30,0,30,30"
                        Height="45"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="AddRoute_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#1E3A8A"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#152869"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2A4CB3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>
    </Grid>
</UserControl>