<UserControl x:Class="TMS.Controls.Admin.ViewScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20">
        <TextBlock Text="View Schedules" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,20"/>

        <TextBlock Text="Recurring Schedules" FontWeight="Bold" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgRecurringSchedules" AutoGenerateColumns="False" CanUserAddRows="False" Height="200" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bus" Binding="{Binding BusName}" Width="*"/>
                <DataGridTextColumn Header="Route" Binding="{Binding RouteName}" Width="*"/>
                <DataGridTextColumn Header="Start → End" Binding="{Binding DateRange}" Width="120"/>
                <DataGridTextColumn Header="Days" Binding="{Binding Days}" Width="150"/>
                <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="80"/>
                <DataGridTextColumn Header="Departure" Binding="{Binding DepartureTime}" Width="80"/>
                <DataGridTextColumn Header="Arrival" Binding="{Binding ArrivalTime}" Width="80"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>



        <TextBlock Text="One-Time Schedules" FontWeight="Bold" Margin="0,10,0,10"/>
        <DataGrid x:Name="dgOneTimeSchedules" AutoGenerateColumns="False" CanUserAddRows="False" Height="400">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bus" Binding="{Binding BusName}" Width="*"/>
                <DataGridTextColumn Header="Route" Binding="{Binding RouteName}" Width="*"/>
                <DataGridTextColumn Header="Departure" Binding="{Binding DepartureTime}" Width="*"/>
                <DataGridTextColumn Header="Arrival" Binding="{Binding ArrivalTime}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="Completed" Binding="{Binding Completed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
