<UserControl x:Class="TMS.Controls.Admin.AddBusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TMS.Pages"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Add New Bus"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1E3A8A"
                   Margin="0,0,0,20"/>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Bus Number"/>
            <TextBox x:Name="txtBusNumber" Width="200"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Bus Type"/>
            <ComboBox x:Name="cmbBusType" Width="200">
                <ComboBoxItem Content="Seater"/>
                <ComboBoxItem Content="Sleeper"/>
                <ComboBoxItem Content="AC"/>
                <ComboBoxItem Content="Non-AC"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Total Seats"/>
            <TextBox x:Name="txtTotalSeats" Width="200"/>
        </StackPanel>

        <Button Content="Add Bus"
                Width="120"
                Height="35"
                Background="#1E3A8A"
                Foreground="White"
                FontWeight="Bold"
                Click="AddBus_Click"/>
    </StackPanel>
</UserControl>
