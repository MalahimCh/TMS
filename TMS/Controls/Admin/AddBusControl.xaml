<UserControl x:Class="TMS.Controls.Admin.AddBusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             FontFamily="Segoe UI">

    <Grid Background="#F0F2F5">

        <Border Background="White" 
                Width="450" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#1E3A8A" 
                        CornerRadius="12,12,0,0" 
                        Padding="20">
                    <TextBlock Text="Add New Bus" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Row="1" Margin="30,25,30,25">

                    <TextBlock Text="Bus Number" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtBusNumber" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Bus Type" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <ComboBox x:Name="cmbBusType" 
                                  Padding="10" 
                                  FontSize="14" 
                                  Background="Transparent" 
                                  BorderThickness="0"
                                  VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Seater"/>
                            <ComboBoxItem Content="Sleeper"/>
                            <ComboBoxItem Content="AC"/>
                            <ComboBoxItem Content="Non-AC"/>
                        </ComboBox>
                    </Border>

                    <TextBlock Text="Total Seats" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="txtTotalSeats" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                </StackPanel>

                <Button Content="Add Bus"
                        Grid.Row="2"
                        Margin="30,0,30,30"
                        Height="45"
                        Background="#1E3A8A"
                        Foreground="white"
                        FontWeight="Bold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="AddBus_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Border>
    </Grid>
</UserControl>