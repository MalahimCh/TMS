<UserControl x:Class="TMS.Controls.Admin.DeleteRouteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" VerticalAlignment="Top" Width="300">

        <TextBlock Text="Select Route to Delete"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ComboBox x:Name="cmbRoutes" Height="30" Margin="0,0,0,10"/>
        <Button Content="Load Route Data" Click="SelectRoute_Click" Height="30" Margin="0,0,0,20"/>

        <TextBlock Text="Origin"/>
        <TextBox x:Name="txtOrigin" IsReadOnly="True" Margin="0,0,0,10"/>

        <TextBlock Text="Destination"/>
        <TextBox x:Name="txtDestination" IsReadOnly="True" Margin="0,0,0,10"/>

        <TextBlock Text="Distance (Km)"/>
        <TextBox x:Name="txtDistance" IsReadOnly="True" Margin="0,0,0,10"/>

        <TextBlock Text="Estimated Time (minutes)"/>
        <TextBox x:Name="txtEstimatedTime" IsReadOnly="True" Margin="0,0,0,20"/>

        <Button Content="Delete Route" Click="DeleteRoute_Click" Height="35" Background="Red" Foreground="White"/>
    </StackPanel>
</UserControl>
