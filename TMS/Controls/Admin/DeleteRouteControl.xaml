<UserControl x:Class="TMS.Controls.Admin.DeleteRouteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             FontFamily="Segoe UI">

    <Grid Background="#F0F2F5">

        <Border Background="White" 
                Width="450" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#1E3A8A" 
                        CornerRadius="12,12,0,0" 
                        Padding="20">
                    <TextBlock Text="Delete Route" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Row="1" Margin="30,25,30,30">

                    <TextBlock Text="Select Route to Delete" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                        <ComboBox x:Name="cmbRoutes" 
                                  Padding="10" 
                                  FontSize="14" 
                                  Background="Transparent" 
                                  BorderThickness="0"
                                  VerticalContentAlignment="Center"/>
                    </Border>

                    <Button Content="Load Route Data" 
                            Click="SelectRoute_Click" 
                            Height="35" 
                            Background="Transparent" 
                            BorderBrush="#1E3A8A" 
                            BorderThickness="1" 
                            Foreground="#1E3A8A" 
                            FontWeight="SemiBold"
                            Margin="0,0,0,25">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Separator Background="#E0E0E0" Margin="0,0,0,20"/>

                    <TextBlock Text="Route Details (Read Only)" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>

                    <TextBlock Text="Origin" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#EEEEEE" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                        <TextBox x:Name="txtOrigin" 
                                 IsReadOnly="True"
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Destination" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#EEEEEE" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                        <TextBox x:Name="txtDestination" 
                                 IsReadOnly="True"
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Distance (Km)" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,5"/>
                    <Border Background="#EEEEEE" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                        <TextBox x:Name="txtDistance" 
                                 IsReadOnly="True"
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="Estimated Time (minutes)" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,20"/>
                    <Border Background="#EEEEEE" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,25">
                        <TextBox x:Name="txtEstimatedTime" 
                                 IsReadOnly="True"
                                 Padding="10" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0"/>
                    </Border>

                    <Button Content="Delete Route" 
                            Click="DeleteRoute_Click" 
                            Height="45" 
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F44336"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E53935"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>