<UserControl x:Class="TMS.Controls.Admin.ViewBusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20" VerticalAlignment="Top">

        <TextBlock Text="All Buses" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <DataGrid x:Name="dgBuses" AutoGenerateColumns="False" CanUserAddRows="False" Height="400" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bus ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Bus Number" Binding="{Binding BusNumber}" Width="*"/>
                <DataGridTextColumn Header="Bus Type" Binding="{Binding BusType}" Width="*"/>
                <DataGridTextColumn Header="Total Seats" Binding="{Binding TotalSeats}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
