<UserControl x:Class="TMS.Controls.ChangePasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="Segoe UI"
             Background="#F0F2F5">

    <Grid>
        <Border Background="White"
                Width="450"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0"
                        Background="#1E3A8A"
                        CornerRadius="12,12,0,0"
                        Padding="20">
                    <TextBlock Text="Change Password"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- CONTENT -->
                <StackPanel Grid.Row="1" Margin="30,25,30,30">

                    <!-- CURRENT PASSWORD -->
                    <TextBlock Text="Current Password"
                               FontWeight="SemiBold"
                               Foreground="#666"
                               Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC"
                            CornerRadius="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <Grid>

                            <PasswordBox x:Name="txtCurrent"
                                         Padding="10,0,45,0"
                                         FontSize="14"
                                         Background="Transparent"
                                         BorderThickness="0"/>

                            <TextBox x:Name="txtCurrentVisible"
                                     Padding="10,0,45,0"
                                     FontSize="14"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Visibility="Collapsed"/>

                            <Button Width="30" Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Click="ToggleCurrentPasswordVisibility_Click">
                                <materialDesign:PackIcon x:Name="IconCurrent"
                                                         Kind="Eye"
                                                         Foreground="#666"/>
                            </Button>
                        </Grid>
                    </Border>


                    <!-- NEW PASSWORD -->
                    <TextBlock Text="New Password"
                               FontWeight="SemiBold"
                               Foreground="#666"
                               Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC"
                            CornerRadius="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <Grid>

                            <PasswordBox x:Name="txtNew"
                                         Padding="10,0,45,0"
                                         FontSize="14"
                                         Background="Transparent"
                                         BorderThickness="0"/>

                            <TextBox x:Name="txtNewVisible"
                                     Padding="10,0,45,0"
                                     FontSize="14"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Visibility="Collapsed"/>

                            <Button Width="30" Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Click="ToggleNewPasswordVisibility_Click">
                                <materialDesign:PackIcon x:Name="IconNew"
                                                         Kind="Eye"
                                                         Foreground="#666"/>
                            </Button>
                        </Grid>
                    </Border>


                    <!-- CONFIRM PASSWORD -->
                    <TextBlock Text="Confirm New Password"
                               FontWeight="SemiBold"
                               Foreground="#666"
                               Margin="0,0,0,5"/>

                    <Border Background="#F7F9FC"
                            CornerRadius="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,25">
                        <Grid>

                            <PasswordBox x:Name="txtConfirm"
                                         Padding="10,0,45,0"
                                         FontSize="14"
                                         Background="Transparent"
                                         BorderThickness="0"/>

                            <TextBox x:Name="txtConfirmVisible"
                                     Padding="10,0,45,0"
                                     FontSize="14"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Visibility="Collapsed"/>

                            <Button Width="30" Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Click="ToggleConfirmPasswordVisibility_Click">
                                <materialDesign:PackIcon x:Name="IconConfirm"
                                                         Kind="Eye"
                                                         Foreground="#666"/>
                            </Button>
                        </Grid>
                    </Border>


                    <!-- SAVE BUTTON -->
                    <Button Content="Change Password"
                            Click="ChangePassword_Click"
                            Height="45"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0"
                            Background="#1E3A8A"></Button>
                </StackPanel>

            </Grid>

        </Border>
    </Grid>
</UserControl>
